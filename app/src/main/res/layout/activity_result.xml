<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/back_icon"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/resultTopicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULT"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0.03"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/detailsTopicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here is your input details :"
        android:fontFamily="@font/nunito_bold"
        android:textSize="16sp"
        android:layout_below="@id/resultTopicTextView"
        android:layout_marginTop="40dp"
        android:paddingStart="5sp"/>

    <TextView
        android:id="@+id/loanAmountResultTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Loan Amount ( RM ) : "
        android:fontFamily="@font/nunito_bold"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_below="@id/detailsTopicTextView"
        android:layout_marginTop="10dp"
        android:background="@drawable/result_textbox"
        android:paddingStart="15dp"/>

    <TextView
        android:id="@+id/loanTermResultTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Loan Term ( Years ) : "
        android:fontFamily="@font/nunito_bold"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_below="@id/loanAmountResultTextView"
        android:layout_marginTop="15dp"
        android:background="@drawable/result_textbox"
        android:paddingStart="15dp"/>

    <TextView
        android:id="@+id/interestRateResultTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Interest Rate ( % ) "
        android:fontFamily="@font/nunito_bold"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_below="@id/loanTermResultTextView"
        android:layout_marginTop="15dp"
        android:background="@drawable/result_textbox"
        android:paddingStart="15dp"/>

    <TextView
        android:id="@+id/loanTypeTopicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan Type"
        android:fontFamily="@font/lato_bold"
        android:textSize="22sp"
        android:layout_below="@id/interestRateResultTextView"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/loanTypeResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAR LOAN"
        android:fontFamily="@font/nunito_bold"
        android:textSize="26sp"
        android:textColor="@color/pink"
        android:layout_below="@id/loanTypeTopicTextView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/monthlyResultTopicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Payable"
        android:fontFamily="@font/lato_bold"
        android:textSize="22sp"
        android:layout_below="@id/loanTypeResultTextView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/monthlyResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM 0.00"
        android:fontFamily="@font/nunito_bold"
        android:textSize="28sp"
        android:textColor="@color/pink"
        android:layout_below="@id/monthlyResultTopicTextView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/totalResultTopicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Payable"
        android:fontFamily="@font/lato_bold"
        android:textSize="22sp"
        android:layout_below="@id/monthlyResultTextView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/totalResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM 0.00"
        android:textColor="@color/pink"
        android:fontFamily="@font/nunito_bold"
        android:textSize="28sp"
        android:layout_below="@id/totalResultTopicTextView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>